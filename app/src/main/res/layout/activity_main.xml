<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E3F2FD">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#1976D2"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/txtToolbarTitle"
                android:text="ðŸ“– BÃ­blia Sagrada"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- TELA INÃCIO -->
        <LinearLayout
            android:id="@+id/layoutInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"/>

        <!-- TELA DA BÃBLIA -->
        <LinearLayout
            android:id="@+id/layoutBiblia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <ListView 
                android:id="@+id/listLivros" 
                android:layout_width="match_parent" 
                android:layout_height="match_parent"/>
        </LinearLayout>

        <!-- TELA DE BUSCA -->
        <LinearLayout
            android:id="@+id/layoutBuscar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">
            <TextView 
                android:text="ðŸ”Ž Pesquisar" 
                android:textSize="20sp" 
                android:textStyle="bold" 
                android:textColor="#1976D2" 
                android:layout_marginBottom="10dp" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"/>
            <EditText 
                android:id="@+id/edtBusca" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:hint="Digite uma palavra..." 
                android:padding="12dp"/>
            <Button 
                android:id="@+id/btnPesquisar" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:text="Pesquisar" 
                android:layout_marginTop="10dp"/>
            <ListView 
                android:id="@+id/listResultados" 
                android:layout_width="match_parent" 
                android:layout_height="match_parent" 
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <!-- TELA DE FAVORITOS -->
        <LinearLayout
            android:id="@+id/layoutFavoritos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView 
                android:text="â­ Favoritos" 
                android:textSize="20sp" 
                android:textStyle="bold" 
                android:gravity="center" 
                android:padding="16dp" 
                android:textColor="#1976D2" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"/>
            <ListView 
                android:id="@+id/listFavoritos" 
                android:layout_width="match_parent" 
                android:layout_height="match_parent"/>
        </LinearLayout>

        <!-- TELA VERSÃCULO DO DIA -->
        <LinearLayout
            android:id="@+id/layoutVersiculoDia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:padding="24dp">
            <TextView 
                android:text="ðŸ”” VersÃ­culo do Dia" 
                android:textSize="22sp" 
                android:textStyle="bold" 
                android:textColor="#1976D2" 
                android:layout_marginBottom="20dp" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"/>
            <TextView 
                android:id="@+id/txtVersiculoDia" 
                android:text="Carregando..." 
                android:textSize="18sp" 
                android:gravity="center" 
                android:lineSpacingExtra="6dp" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"/>
            <TextView 
                android:id="@+id/txtReferenciaDia" 
                android:text="" 
                android:textSize="16sp" 
                android:textStyle="italic" 
                android:textColor="#1976D2" 
                android:gravity="center" 
                android:layout_marginTop="16dp" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"/>
            <Button 
                android:id="@+id/btnCompartilharDia" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="ðŸ“¤ Compartilhar" 
                android:layout_marginTop="24dp"/>
        </LinearLayout>

        <!-- TELA PROGRAMAÃ‡ÃƒO -->
        <LinearLayout
            android:id="@+id/layoutProgramacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"/>

        <!-- TELA PLANO DE LEITURA -->
        <LinearLayout
            android:id="@+id/layoutPlanoLeitura"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">
            <TextView 
                android:text="ðŸ“Š Plano de Leitura" 
                android:textSize="20sp" 
                android:textStyle="bold" 
                android:textColor="#1976D2" 
                android:layout_marginBottom="8dp" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"/>
            <TextView 
                android:id="@+id/txtDataHoje" 
                android:text="" 
                android:textSize="14sp" 
                android:textColor="#666666" 
                android:layout_marginBottom="16dp" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"/>
            <ListView 
                android:id="@+id/listPlanoLeitura" 
                android:layout_width="match_parent" 
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>