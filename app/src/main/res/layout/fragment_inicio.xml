<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#E3F2FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CARD DE SAUDACAO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_card_azul">

            <TextView
                android:id="@+id/txtSaudacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bom dia!"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Que a paz de Deus esteja com voce"
                android:textColor="#BBDEFB"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- CARD DO VERSICULO DO DIA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_card_branco">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versiculo do Dia"
                android:textColor="#1976D2"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="#1976D2"/>

            <TextView
                android:id="@+id/txtVersiculoInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carregando versiculo..."
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="italic"
                android:lineSpacingMultiplier="1.4"/>

            <TextView
                android:id="@+id/txtReferenciaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="- Referencia"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- TITULO ACESSO RAPIDO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Acesso Rapido"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- LINHA 1 DE BOTOES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnAcessoBiblia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_outline"
                android:padding="16dp"
                android:text="Biblia"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btnAcessoBuscar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_button_outline"
                android:padding="16dp"
                android:text="Buscar"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- LINHA 2 DE BOTOES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnAcessoFavoritos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_outline"
                android:padding="16dp"
                android:text="Favoritos"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btnAcessoProgramacao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_button_outline"
                android:padding="16dp"
                android:text="Programacao"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- LINHA 3 DE BOTOES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnVersiculoDia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_outline"
                android:padding="16dp"
                android:text="Versiculo"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btnQuiz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_button_outline"
                android:padding="16dp"
                android:text="Quiz"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- RODAPE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/bg_card_claro">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biblia Sagrada IBSCC"
                android:textColor="#1976D2"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Versao 1.0"
                android:textColor="#666666"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>