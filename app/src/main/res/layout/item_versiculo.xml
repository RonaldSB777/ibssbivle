<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- NÚMERO DO VERSÍCULO -->
    <TextView
        android:id="@+id/tvNumeroVersiculo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_verse_number"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd="12dp"/>

    <!-- TEXTO DO VERSÍCULO -->
    <TextView
        android:id="@+id/tvTextoVersiculo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.IBSSBIVLE.Verse"
        android:textColor="?attr/colorOnBackground"
        tools:text="No princípio criou Deus os céus e a terra."/>

</LinearLayout>